# File descriptor limit for klag-exporter container
# Set low (256) to trigger FD exhaustion quickly, higher (1024+) for comparison
# check ulimit on your system before deploying to production
KLAG_NOFILE_LIMIT=65536

# Topic configuration
NUM_TOPICS=100
PARTITIONS_PER_TOPIC=3

# Consumer configuration
NUM_CONSUMER_GROUPS=10

# klag-exporter settings
MAX_CONCURRENT_FETCHES=10
POLL_INTERVAL=10s
